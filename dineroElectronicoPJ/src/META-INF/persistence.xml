<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="dineroElectronicoPJ" transaction-type="RESOURCE_LOCAL">
		<class>dinero.electronico.model.dao.entities.Cliente</class>
		<class>dinero.electronico.model.dao.entities.Contador</class>
		<class>dinero.electronico.model.dao.entities.Cuenta</class>
		<class>dinero.electronico.model.dao.entities.Tipotran</class>
		<class>dinero.electronico.model.dao.entities.Tipousr</class>
		<class>dinero.electronico.model.dao.entities.Transaccion</class>
		<class>dinero.electronico.model.dao.entities.Usuario</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/dineroelectronico"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="admin"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
